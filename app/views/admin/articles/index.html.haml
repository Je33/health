%table.table
  %tr
    %th #
    %th Название статьи
    %th Описание
    %th Удалить
  - @article.each do |d|
    %tr
      %td
        %a{href: "/admin/articles/#{d.id}"}=d.id
      %td= d.name
      %td= d.description
      %td
        =link_to "Удалить", admin_article_path(d), :method => :delete, :class => "btn btn-danger", :confirm => "Вы уверены?"



%a.btn{href: "/admin/articles/new"} Добавить

