= form_for [:admin, @order], :html => {:class => "form-horizontal"} do |f|

  .control-group
    %label.control-label ФИО
    .controls
      %button.btn.disabled{:disabled => true}= @order.client_fio

  .control-group
    %label.control-label Email
    .controls
      %button.btn.disabled{:disabled => true}= @order.client_email

  .control-group
    %label.control-label Телефон
    .controls
      %button.btn.disabled{:disabled => true}= @order.client_phone

  .control-group
    %label.control-label Сумма заказа
    .controls
      %button.btn.disabled{:disabled => true}= @order.sum

  -if @order.services.exists?
    %table
      - @order.services.each do |t|
        %tr
          %td= t.name
          %td= t.description
          %td= t.cost
