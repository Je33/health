%table.table
  %tr
    %th #
    %th Название
    %th Описание
    %th Удалить
  - @post.each do |d|
    %tr
      %td
        %a{href: "/admin/posts/#{d.id}"}=d.id
      %td= d.name
      %td= d.description
      %td
        =link_to "Удалить", admin_post_path(d), :method => :delete, :class => "btn btn-danger", :confirm => "Вы уверены?"



%a.btn{href: "/admin/posts/new"} Добавить

